@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        @* asp-validation-summary選擇All，可以自動顯示尚未通過的驗證 *@
        <div asp-validation-summary="All"></div>
        @* //獲取model中的Name屬性 *@
        <div class="mb-3">
            @* 對label使用asp-for，就會直接顯示該Model的屬性名稱 *@
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            @* 驗證訊息 asp-validation-for *@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @* //獲取model中的DisplayOrder屬性 *@
        <div class="mb-3">
            @* 對label使用asp-for，就會直接顯示該Model的屬性名稱 *@
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
            @* 驗證訊息 asp-validation-for *@
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Category</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>
@* 添加前端Jquery自動驗證，減少對Server不必要的請求 *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

